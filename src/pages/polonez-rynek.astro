---
import BaseLayout from '../layouts/BaseLayout.astro';

const imageGalleryData = {
  "@context": "https://schema.org",
  "@type": "ImageGallery",
  "name": "Polonez na Rynku Lubliniec",
  "description": "Galeria zdjęć z Poloneza na Rynku Lubliniec",
  "url": "https://jankobus.com/polonez-rynek",
  "creator": {
    "@type": "Person",
    "name": "Jan Kobus"
  },
  "datePublished": "2026-01-01"
};

const breadcrumbData = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [{
    "@type": "ListItem",
    "position": 1,
    "name": "Strona główna",
    "item": "https://jankobus.com/"
  },{
    "@type": "ListItem",
    "position": 2,
    "name": "Fotografia Eventowa",
    "item": "https://jankobus.com/events"
  },{
    "@type": "ListItem",
    "position": 3,
    "name": "Polonez na Rynku Lubliniec",
    "item": "https://jankobus.com/polonez-rynek"
  }]
};

const structuredData = [imageGalleryData, breadcrumbData];
---

<BaseLayout
    title="Polonez na Rynku Lubliniec - Galeria Zdjęć | Jan Kobus Fotografia"
    description="Galeria zdjęć z Poloneza na Rynku Lubliniec. Profesjonalna fotografia eventowa - Jan Kobus."
    keywords="Polonez, Lubliniec, fotografia tradycyjna, zdjęcia eventowe, Jan Kobus"
    canonical="https://jankobus.com/polonez-rynek"
    ogType="article"
    ogImage="https://jankobus.com/photos/Polonez%20na%20rynku%20lubliniec/DSC04297.jpg"
    twitterCard="summary_large_image"
    structuredData={structuredData}
    preloadImages={["/photos/Polonez%20na%20rynku%20lubliniec/DSC04297.jpg"]}
>

    <nav>
        <div class="nav-left">
            <a href="/#work">Prace</a>
            <a href="/o-mnie">O mnie</a>
            <a href="/kontakt">Kontakt</a>
        </div>
        <div class="nav-center">
            <a href="/">Jan Kobus</a>
        </div>
        <div class="nav-right">
            <a href="https://www.facebook.com/profile.php?id=61587671346611" target="_blank"><i class="fab fa-facebook-f"></i></a>
            <a href="https://www.instagram.com/redix.45/" target="_blank"><i class="fab fa-instagram"></i></a>
        </div>
            <button class="nav-hamburger" aria-label="Menu" aria-expanded="false"><span></span><span></span><span></span></button>
    </nav>

    <header class="project-header">
        <h1>Polonez na Rynku Lubliniec</h1>
    </header>

    <section class="masonry-gallery" id="moja-galeria">
    </section>

    <div class="see-more-container">
        <h2 class="see-more-title">Zobacz więcej albumów</h2>
        <div class="related-albums">
            <div class="gallery-container">
                <div class="gallery-item">
                    <a href="/koszecin-wosp">
                        <img src="/photos/Koszęcin%20WOŚP%202026/DSC03294.jpg" alt="Fotografia eventowa - Koszęcin WOŚP 2026" loading="eager" decoding="async">
                    </a>
                </div>
                <div class="caption-box">
                    <div class="caption-title">Koszęcin WOŚP 2026</div>
                    <div class="caption-year">2026</div>
                </div>
            </div>
            <div class="gallery-container">
                <div class="gallery-item">
                    <a href="/turniej-koszykówki">
                        <img src="/photos/Turniej%20koszykówki/DSC04013-1.jpg" alt="Fotografia eventowa - Turniej koszykówki" loading="eager" decoding="async">
                    </a>
                </div>
                <div class="caption-box">
                    <div class="caption-title">Turniej Koszykówki</div>
                    <div class="caption-year">2026</div>
                </div>
            </div>
        </div>
    </div>

    <footer>
        <div class="footer-content">
            <p>&copy; 2026 Jan Kobus. Wszelkie prawa zastrzeżone.</p>
            <div class="footer-socials">
                <a href="https://www.facebook.com/profile.php?id=61587671346611" target="_blank"><i class="fab fa-facebook-f"></i></a>
                <a href="https://www.instagram.com/redix.45/" target="_blank"><i class="fab fa-instagram"></i></a>
            </div>
        </div>
    </footer>

    <script src="/script.js" is:inline></script>
    <script>
        const images = [
            'DSC04297.jpg', 'DSC04300.jpg', 'DSC04311.jpg', 'DSC04353.jpg', 'DSC04357.jpg',
            'DSC04364.jpg', 'DSC04372.jpg', 'DSC04376.jpg', 'DSC04383.jpg', 'DSC04402.jpg',
            'DSC04447.jpg', 'DSC04457.jpg', 'DSC04479.jpg', 'DSC04484.jpg'
        ];

        const container = document.getElementById('moja-galeria');
        const folder = '/photos/Polonez%20na%20rynku%20lubliniec/';

        images.forEach((img, index) => {
            const div = document.createElement('div');
            div.className = 'masonry-item';

            const picture = document.createElement('picture');
            const imgEl = document.createElement('img');

            imgEl.src = folder + img;
            imgEl.alt = 'Fotografia eventowa - Polonez na Rynku Lubliniec';
            imgEl.loading = index < 3 ? 'eager' : 'lazy';
            if (index < 2) imgEl.fetchPriority = 'high';
            imgEl.decoding = 'async';
            imgEl.style.width = '100%';
            imgEl.style.height = 'auto';
            imgEl.style.display = 'block';

            imgEl.onclick = () => {
                openLightbox(folder, '', index + 1, images.length, '.jpg', 0, images);
            };

            picture.appendChild(imgEl);
            div.appendChild(picture);
            container.appendChild(div);
        });
    </script>

</BaseLayout>
