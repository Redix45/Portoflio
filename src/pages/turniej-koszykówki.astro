---
import BaseLayout from '../layouts/BaseLayout.astro';

const structuredData = [
  {
    "@context": "https://schema.org",
    "@type": "ImageGallery",
    "name": "Turniej Koszykówki",
    "description": "Galeria zdjęć z Turnieju Koszykówki",
    "url": "https://jankobus.com/turniej-koszykówki",
    "creator": {
      "@type": "Person",
      "name": "Jan Kobus"
    },
    "datePublished": "2026-01-01"
  },
  {
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": [{
      "@type": "ListItem",
      "position": 1,
      "name": "Strona główna",
      "item": "https://jankobus.com/"
    },{
      "@type": "ListItem",
      "position": 2,
      "name": "Fotografia Eventowa",
      "item": "https://jankobus.com/events"
    },{
      "@type": "ListItem",
      "position": 3,
      "name": "Turniej Koszykówki",
      "item": "https://jankobus.com/turniej-koszykówki"
    }]
  }
];
---

<BaseLayout
    title="Turniej Koszykówki - Galeria Zdjęć | Jan Kobus Fotografia"
    description="Galeria zdjęć z Turnieju Koszykówki. Profesjonalna fotografia sportowa - Jan Kobus."
    keywords="koszykówka, turniej, fotografia sportowa, zdjęcia eventowe, Jan Kobus"
    canonical="https://jankobus.com/turniej-koszykówki"
    ogType="article"
    ogImage="https://jankobus.com/photos/Turniej%20koszykówki/DSC04013-1.jpg"
    twitterCard="summary_large_image"
    structuredData={structuredData}
    preloadImages={["/photos/Turniej%20koszykówki/DSC04013-1.jpg"]}
>

    <nav>
        <div class="nav-left">
            <a href="/#work">Prace</a>
            <a href="/o-mnie">O mnie</a>
            <a href="/kontakt">Kontakt</a>
        </div>
        <div class="nav-center">
            <a href="/">Jan Kobus</a>
        </div>
        <div class="nav-right">
            <a href="https://www.facebook.com/profile.php?id=61587671346611" target="_blank"><i class="fab fa-facebook-f"></i></a>
            <a href="https://www.instagram.com/redix.45/" target="_blank"><i class="fab fa-instagram"></i></a>
        </div>
            <button class="nav-hamburger" aria-label="Menu" aria-expanded="false"><span></span><span></span><span></span></button>
    </nav>

    <header class="project-header">
        <h1>Turniej Koszykówki</h1>
    </header>

    <section class="masonry-gallery" id="moja-galeria">
    </section>

    <div class="see-more-container">
        <h2 class="see-more-title">Zobacz więcej albumów</h2>
        <div class="related-albums">
            <div class="gallery-container">
                <div class="gallery-item">
                    <a href="/koszecin-wosp">
                        <img src="/photos/Koszęcin%20WOŚP%202026/DSC03294.jpg" alt="Fotografia eventowa - Koszęcin WOŚP 2026" loading="eager" decoding="async">
                    </a>
                </div>
                <div class="caption-box">
                    <div class="caption-title">Koszęcin WOŚP 2026</div>
                    <div class="caption-year">2026</div>
                </div>
            </div>
            <div class="gallery-container">
                <div class="gallery-item">
                    <a href="/polonez-rynek">
                        <img src="/photos/Polonez%20na%20rynku%20lubliniec/DSC04297.jpg" alt="Fotografia eventowa - Polonez na Rynku Lubliniec" loading="eager" decoding="async">
                    </a>
                </div>
                <div class="caption-box">
                    <div class="caption-title">Polonez na Rynku Lubliniec</div>
                    <div class="caption-year">2026</div>
                </div>
            </div>
        </div>
    </div>

    <footer>
        <div class="footer-content">
            <p>&copy; 2026 Jan Kobus. Wszelkie prawa zastrzeżone.</p>
            <div class="footer-socials">
                <a href="https://www.facebook.com/profile.php?id=61587671346611" target="_blank"><i class="fab fa-facebook-f"></i></a>
                <a href="https://www.instagram.com/redix.45/" target="_blank"><i class="fab fa-instagram"></i></a>
            </div>
        </div>
    </footer>

    <script is:inline>
        const images = [
            'DSC04013-1.jpg', 'DSC04051.jpg', 'DSC04056.jpg', 'DSC04057.jpg', 'DSC04071.jpg',
            'DSC04074.jpg', 'DSC04109.jpg', 'DSC04193.jpg', 'DSC04238.jpg', 'DSC04240.jpg',
            'DSC04244.jpg'
        ];

        const container = document.getElementById('moja-galeria');
        const folder = '/photos/Turniej%20koszykówki/';

        images.forEach((img, index) => {
            const div = document.createElement('div');
            div.className = 'masonry-item';

            const picture = document.createElement('picture');
            const imgEl = document.createElement('img');

            imgEl.src = folder + img;
            imgEl.alt = 'Fotografia sportowa - Turniej Koszykówki';
            imgEl.loading = index < 3 ? 'eager' : 'lazy';
            if (index < 2) imgEl.fetchPriority = 'high';
            imgEl.decoding = 'async';
            imgEl.style.width = '100%';
            imgEl.style.height = 'auto';
            imgEl.style.display = 'block';

            imgEl.onclick = () => {
                openLightbox(folder, '', index + 1, images.length, '.jpg', 0, images);
            };

            picture.appendChild(imgEl);
            div.appendChild(picture);
            container.appendChild(div);
        });
    </script>

</BaseLayout>
