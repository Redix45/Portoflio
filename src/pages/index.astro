    "@type": "PostalAddress",
    "streetAddress": "Lubliniec",
    "addressLocality": "Lubliniec",
    "addressRegion": "Śląskie",
    "postalCode": "42-700",
    "addressCountry": "PL"
  },
  "areaServed": [
    {
      "@type": "City",
      "name": "Lubliniec"
    },
    {
      "@type": "State",
      "name": "Województwo Śląskie"
