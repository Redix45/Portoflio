      { "@type": "City", "name": "Katowice" },
      { "@type": "City", "name": "Opole" },
      { "@type": "State", "name": "Województwo Śląskie" }
    ],
    "sameAs": [
      "https://www.facebook.com/profile.php?id=61587671346611",
      "https://www.instagram.com/redix.45/"
    ],
    "founder": {
      "@type": "Person",
      "name": "Jan Kobus",
      "jobTitle": "Fotograf",
      "url": "https://jankobus.com/o-mnie/"
    }
  },
  {
    "@context": "https://schema.org",
    "@type": "FAQPage",
    "mainEntity": [
      {
        "@type": "Question",
        "name": "Na jakim obszarze działa fotograf Jan Kobus?",
