      "@type": "PostalAddress",
      "addressLocality": "Lubliniec",
      "addressRegion": "Śląskie",
      "postalCode": "42-700",
      "addressCountry": "PL"
    },
    "geo": {
      "@type": "GeoCoordinates",
      "latitude": "50.6715",
      "longitude": "18.6965"
    },
    "areaServed": [
      { "@type": "City", "name": "Lubliniec" },
